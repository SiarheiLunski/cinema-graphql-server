{
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["es5", "es6", "es2017"],
      "outDir": "./build",
      "moduleResolution": "node",
      "removeComments": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "noUnusedParameters": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   },
   "exclude": ["node_modules"],
   "include": ["./src/**/*.ts"]
}
